<IfModule mod_ssl.c>

SSLVerifyClient     require
SSLVerifyDepth      10

# for SNI
NameVirtualHost *:443

<VirtualHost *:443>
    SSLEngine               on
	ServerName              ws1.test:443
	DocumentRoot            /var/www/ws1
	SSLCertificateFile      /test/etc/ws1/c.pem
	SSLCertificateKeyFile   /test/etc/ws1/k.pem
	SSLCACertificateFile    /test/etc/ca1/demoCA/cacert.pem

	<Directory /var/www/ws1>
        SetHandler      python-program
        PythonHandler   sbsim
        PythonDebug     on
	</Directory>
</VirtualHost>

<VirtualHost *:443>
    SSLEngine               on
	ServerName              ws2.test:443
	DocumentRoot            /var/www/ws2
	SSLCertificateFile      /test/etc/ws2/c.pem
	SSLCertificateKeyFile   /test/etc/ws2/k.pem
	SSLCACertificateFile    /test/etc/ca2/demoCA/cacert.pem

	<Directory /var/www/ws2>
        SetHandler      python-program
        PythonHandler   sbsim
        PythonDebug     on
	</Directory>
</VirtualHost>
