#ifndef _LIBENCLOUD_HTTP_HTTP_H_
#define _LIBENCLOUD_HTTP_HTTP_H_

#include <QString>
#include <encloud/Common>

#define LIBENCLOUD_HTTP_NL "\r\n"

namespace libencloud {

//
// HTTP definitions based on rfc2616
//

typedef enum {
    LIBENCLOUD_HTTP_METHOD_NULL = -1,
    LIBENCLOUD_HTTP_METHOD_OPTIONS,
    LIBENCLOUD_HTTP_METHOD_GET,
    LIBENCLOUD_HTTP_METHOD_HEAD,
    LIBENCLOUD_HTTP_METHOD_POST,
    LIBENCLOUD_HTTP_METHOD_PUT,
    LIBENCLOUD_HTTP_METHOD_DELETE,
    LIBENCLOUD_HTTP_METHOD_TRACE,
    LIBENCLOUD_HTTP_METHOD_CONNECT
} HttpMethod;

typedef enum {

    LIBENCLOUD_HTTP_STATUS_NULL =            -1,

    //1xx
    LIBENCLOUD_HTTP_STATUS_CONTINUE =       100,
    LIBENCLOUD_HTTP_STATUS_SWITCHING =      101,

    //2xx
    LIBENCLOUD_HTTP_STATUS_OK =             200,
    LIBENCLOUD_HTTP_STATUS_CREATED =        201,
    LIBENCLOUD_HTTP_STATUS_ACCEPTED =       202,
    LIBENCLOUD_HTTP_STATUS_NAI =            203,
    LIBENCLOUD_HTTP_STATUS_NOCONTENT =      204,
    LIBENCLOUD_HTTP_STATUS_RESET =          205,
    LIBENCLOUD_HTTP_STATUS_PARTIAL =        206,

    //3xx
    LIBENCLOUD_HTTP_STATUS_MULTIPLE =       300,
    LIBENCLOUD_HTTP_STATUS_MOVED =          301,
    LIBENCLOUD_HTTP_STATUS_FOUND =          302,
    LIBENCLOUD_HTTP_STATUS_SEEOTHER =       303,
    LIBENCLOUD_HTTP_STATUS_NOTMODIFIED =    304,
    LIBENCLOUD_HTTP_STATUS_USEPROXY =       305,
    LIBENCLOUD_HTTP_STATUS_UNUSED =         306,
    LIBENCLOUD_HTTP_STATUS_REDIRECT =       307,

    //4xx
    LIBENCLOUD_HTTP_STATUS_BADREQUEST =     400,
    LIBENCLOUD_HTTP_STATUS_UNAUTHORIZED =   401,
    LIBENCLOUD_HTTP_STATUS_PAYMENT =        402,
    LIBENCLOUD_HTTP_STATUS_FORBIDDEN =      403,
    LIBENCLOUD_HTTP_STATUS_NOTFOUND =       404,
    LIBENCLOUD_HTTP_STATUS_BADMETHOD =      405,
    LIBENCLOUD_HTTP_STATUS_NOTACCEPTABLE =  406,
    LIBENCLOUD_HTTP_STATUS_PROXYAUTH =      407,
    LIBENCLOUD_HTTP_STATUS_TIMEOUT =        408,
    LIBENCLOUD_HTTP_STATUS_CONFLICT =       409,
    LIBENCLOUD_HTTP_STATUS_GONE =           410,
    LIBENCLOUD_HTTP_STATUS_LENGTHREQ =      411,
    LIBENCLOUD_HTTP_STATUS_PRECONDITION =   412,
    LIBENCLOUD_HTTP_STATUS_REQTOOLARGE =    413,
    LIBENCLOUD_HTTP_STATUS_URITOOLONG =     414,
    LIBENCLOUD_HTTP_STATUS_UNSUPPMEDIA =    415,
    LIBENCLOUD_HTTP_STATUS_REQBADRANGE =    416,
    LIBENCLOUD_HTTP_STATUS_EXPECTFAILED =   417,

    //5xx
    LIBENCLOUD_HTTP_STATUS_INTERNALERROR =  500,
    LIBENCLOUD_HTTP_STATUS_NOTIMPLEMENTED = 501,
    LIBENCLOUD_HTTP_STATUS_GWBAD =          502,
    LIBENCLOUD_HTTP_STATUS_SVCUNAVAIL =     503,
    LIBENCLOUD_HTTP_STATUS_GWTIMEOUT =      504,
    LIBENCLOUD_HTTP_STATUS_BADVERSION =     505
} HttpStatus;

LIBENCLOUD_DLLSPEC HttpMethod httpMethodFromString (QString method);
LIBENCLOUD_DLLSPEC QString httpStatusToString (HttpStatus status);

}  // namespace libencloud

#endif  // _LIBENCLOUD_HTTP_HTTP_H_
